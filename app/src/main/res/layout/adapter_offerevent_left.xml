<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowitem_recyclerview_categorylist_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/i1_10dp_margin"
    android:layout_marginTop="@dimen/i1_10dp_margin"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:id="@+id/parent"
        android:layout_height="0dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        style="@style/i1_card_view_without_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp">

                <ImageView
                    android:id="@+id/rowitem_recyclerview_categorylist_defaultimageview"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/business" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/i1_20dp_margin"
                    android:background="@color/button_rent"
                    android:paddingBottom="@dimen/i1_5dp_padding"
                    android:paddingLeft="@dimen/i1_20dp_padding"
                    android:paddingRight="@dimen/i1_20dp_padding"
                    android:paddingTop="@dimen/i1_5dp_padding"
                    android:text="Rent"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <TextView

                android:id="@+id/rowitem_category_name_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/i1_10dp_margin"
                android:text="White and grey headphones"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/rowitem_product_categoryName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/i1_10dp_margin"
                android:text="Lorem ipsum is simply"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/rowitem_productlist_price_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/i1_10dp_margin"
                android:text="7$"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/i1_10dp_padding">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/i1_10dp_margin"
                    android:progress="75" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/drawer_locations" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:id="@+id/parent1"
        android:layout_height="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        style="@style/i1_card_view_without_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-12dp">

                <ImageView
                    android:id="@+id/rowitem_recyclerview_categorylist_defaultimageview1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cleaner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/i1_20dp_margin"
                    android:background="@color/button_rent"
                    android:paddingBottom="@dimen/i1_5dp_padding"
                    android:paddingLeft="@dimen/i1_20dp_padding"
                    android:paddingRight="@dimen/i1_20dp_padding"
                    android:paddingTop="@dimen/i1_5dp_padding"
                    android:text="Rent"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <TextView
                android:id="@+id/rowitem_category_name_TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/i1_10dp_margin"
                android:text="White and grey headphones"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/rowitem_product_categoryName_TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/i1_10dp_margin"
                android:text="Lorem ipsum is simply"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/rowitem_productlist_price_TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/i1_10dp_margin"
                android:text="7$"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/i1_10dp_padding">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/i1_10dp_margin"
                    android:progress="75" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/drawer_locations" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
    </LinearLayout>